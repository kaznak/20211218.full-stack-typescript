// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  // provider = "postgresql"
  // provider = "mongodb"
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  email String @id
}

model Task {
  id    Int     @id @default(autoincrement())
  label String
  done  Boolean @default(false)
}
